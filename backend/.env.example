# Inflight Selfie Generator - Environment Configuration
# Copy this to .env and customize

# Models Directory
MODELS_DIR=./models

# Device Settings
DEVICE=cuda  # or 'cpu' for CPU-only mode
CPU_OFFLOAD=true  # Enable CPU offloading to save VRAM

# Scene Planner
USE_SCENE_PLANNER=true  # Use TinyLlama for scene planning

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false  # Set to 'true' for development auto-reload
LOG_LEVEL=info  # debug, info, warning, error
DEBUG=false  # Show detailed error messages

# Performance
NUM_WORKERS=1  # Number of Uvicorn workers
TIMEOUT=300  # Request timeout in seconds

# Security (configure for production)
# ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
# API_KEY=your-secret-api-key  # For API authentication
